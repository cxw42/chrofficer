{
  "name": "Chrofficer",
  "version": "0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "50",
  "description": "Office 365 webmail thingy. Notifications or somethin'.  (2019 version)",
  "browser_action": {
    "default_icon": "browser-action-icon-inactive.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*.outlook.com/*", "*://*.office365.com/*", "*://*.office.com/*"],
    "js": ["content.js"]
  }],
  "permissions": [
    "tabs",
    "webRequest",
    "notifications",
    "*://*.office365.com/*",
    "*://*.outlook.com/",
    "*://*.office.net/",
    "*://*.office.com/"
  ],
  "web_accessible_resources" : [
    "app.png",
    "browser-action-icon-active.png" 
  ]
}
